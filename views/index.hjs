<html>
  <head>
    <title>My Angular App!</title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/reset.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/atm.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.min.css">
  </head>
  <body ng-app="atm" ng-controller="ctrl">
    <!div ng-repeat="photo in photos | orderBy: '-upvotes'">
    <!{{ photo.title  }} - {{ photo.upvotes }}!>
    <!/div>
    
    <div class="style1">
          <h1>Bootstrap starter template</h1>
          <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
    </div>
      <div class="style2">
        <form class="form-inline" name="uploadPhoto" ng-submit="addPhoto()">
          <div class="row">
            <div class="form-group col-lg-1">
            <input style="width:250px;height:35px;" class="form-control" type="text" ng-minlength="1" ng-maxlength="25" ng-required="true" name="photoTitle" ng-model="title" placeholder="Title"></input>
            </div>
          </div>
          <div class="row">
            </br>
            <div class="form-group col-lg-1">
            <textarea class="form-control" rows="4" style="width:250px;" placeholder="Description"></textarea></br>
            </br>
            <button class="btn" style="position:relative;width:100px;margin:0px auto;left:50%;margin-left:-50px" type="submit">Post</button>
            </div>
          </div>
          <div ng-messages="uploadPhoto.photoTitle.$error" style="color:maroon">
            <div ng-message="minlength">You need atleast two characters!</div>
            <div ng-message="maxlength">Maximum length is 25 characters!</div>
          <div>
        </form>
      </div>
  </body>
</html>
