<html>
  <head>
    <title>My Angular App!</title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="javascripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/reset.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/atm.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.css">
  </head>
  <body ng-app="atm" ng-controller="ctrl">
    <div ng-repeat="photo in photos | orderBy: '-upvotes'">
    {{ photo.title  }} - {{ photo.upvotes }}
    </div>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">at-this-moment</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <div class="container" style="width:90%;">
          <h2>Find exciting snapshots around you!</h2>
          <p>Discover your neighborhood, city, or wherever you are like never before. Help others find interesting places to visit!</p>
        </div>
        <div class="span5 offset1">
        </div>
        <div class="row">
          <div class="col-sm-offset-5 col-sm-2 text-center">
              <div class="btn-group" data-toggle="buttons">
                  <p><a class="btn btn-success btn-lg" href="#" role="button">Discover nearby!</a></p>
                  <p><a class="btn btn-primary btn-lg" href="#" role="button">Upload photo Â»</a></p>
              </div>
          </div>
        </div>
      </div>
    </div>

      <div class="style2">
        <form class="form-inline" name="uploadPhoto" ng-submit="addPhoto()">
          <div class="row">
            <div class="form-group col-lg-1">
            <input style="width:250px;height:35px;" class="form-control" type="text" ng-minlength="1" ng-maxlength="25" ng-required="true" name="photoTitle" ng-model="title" placeholder="Title"></input>
            </div>
          </div>
          <div class="row">
            </br>
            <div class="form-group col-lg-1">
            <textarea class="form-control" rows="4" style="width:250px;" placeholder="Description"></textarea></br>
            </br>
            <button class="btn" style="width:100px;" type="submit">Post</button>
            </div>
          </div>
          <div ng-messages="uploadPhoto.photoTitle.$error" style="color:maroon">
            <div ng-message="minlength">You need atleast two characters!</div>
            <div ng-message="maxlength">Maximum length is 25 characters!</div>
          <div>
        </form>
      </div>
  </body>
</html>
